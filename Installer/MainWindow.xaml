<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LMUC Installer"
        Height="350"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="LMUC Installer"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Main content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Game folder path:"
                       FontWeight="SemiBold"/>
            <TextBlock Text="For example: C:\Program Files (x86)\Steam\steamapps\common\Le Mans Ultimate"
                       FontWeight="SemiBold"/>

            <DockPanel LastChildFill="True">
                <TextBox x:Name="PathTextBox"
                         IsReadOnly="True"
                         Height="30"
                         Margin="0,0,10,0"/>
                <Button x:Name="BrowseButton"
                        Content="Browse..."
                        Width="90"
                        Height="30"
                        Margin="15"
                        Click="BrowseButton_Click"/>
            </DockPanel>

        </StackPanel>

        <!-- Install button -->
        <Button Grid.Row="2"
                Name="InstallButton"
                Content="Install"
                Height="40"
                FontSize="14"
                FontWeight="Bold"
                Margin="0,20,0,0"
                Click="InstallButton_Click"/>
    </Grid>
</Window>
